use aivi.file (readText, stat)

main = do Effect {
  // Safe reading
  contentRes <- readText "config.json"
  content = contentRes or "missing config"
  print content

  // Metadata inspection
  infoRes <- stat "large_video.mp4"
  infoRes match
  | Ok info => print "File size: {info.size} bytes"
  | Err _   => print "File not found"
}
