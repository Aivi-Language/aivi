use aivi.i18n

main = do Effect {
  locale = parseLocale "en-US"
  or { language: "en", region: Some "US", variants: [], tag: "en-US" }

  // Auto-detects format by extension (.properties, .json, .yaml)
  bundle <- bundleFromFile locale "messages/en-US.yaml"
  or { locale: locale, entries: Map.empty }

  print (t bundle (~k"app.welcome") { name: "Alice" })
}
