domain Instant over Timestamp = {
  // Parsing ISO-8601 literals
  // 2024-05-21T12:00:00Z -> Timestamp

  // Comparison (Temporal order)
  (<): params Timestamp -> Timestamp -> Bool
  (<=): params Timestamp -> Timestamp -> Bool
  (>): params Timestamp -> Timestamp -> Bool
  (>=): params Timestamp -> Timestamp -> Bool

  // Duration arithmetic
  (+): Timestamp -> Span -> Timestamp
  (-): Timestamp -> Span -> Timestamp
  (-): Timestamp -> Timestamp -> Span
}
