{
  "scopeName": "text.xml",
  "name": "xml",
  "patterns": [
    {
      "name": "meta.tag.xml",
      "begin": "(<\\/?)([A-Za-z_][A-Za-z0-9:_-]*)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.xml" },
        "2": { "name": "entity.name.tag.xml" }
      },
      "end": "(/?>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.xml" }
      },
      "patterns": [
        {
          "match": "\\b([A-Za-z_][A-Za-z0-9:_-]*)\\b(?=\\s*=)",
          "name": "entity.other.attribute-name.xml"
        },
        {
          "match": "=",
          "name": "punctuation.separator.key-value.xml"
        },
        {
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.xml" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.xml" } },
          "name": "string.quoted.double.xml"
        }
      ]
    }
  ],
  "repository": {}
}
