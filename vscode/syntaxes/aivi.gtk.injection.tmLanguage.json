{
  "scopeName": "text.xml.aivi.gtk.injection",
  "injectionSelector": "string.quoted.other.sigil.gtk.aivi",
  "patterns": [
    {
      "begin": "(\\{)",
      "end": "(\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.section.embedded.begin.aivi" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.section.embedded.end.aivi" }
      },
      "patterns": [{ "include": "source.aivi" }]
    },
    {
      "match": "(?<=<object\\s)(class)(=)(\")(\\w+)(\")",
      "captures": {
        "1": { "name": "entity.other.attribute-name.localname.xml" },
        "2": { "name": "punctuation.separator.key-value.xml" },
        "3": { "name": "punctuation.definition.string.begin.xml" },
        "4": { "name": "support.class.gtk.aivi" },
        "5": { "name": "punctuation.definition.string.end.xml" }
      }
    },
    { "include": "text.xml" }
  ]
}
