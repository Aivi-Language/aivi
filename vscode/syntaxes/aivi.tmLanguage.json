{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AIVI",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#type_signature"
    },
    {
      "include": "#sigil"
    },
    {
      "include": "#string"
    },
    {
      "include": "#color"
    },
    {
      "include": "#unit"
    },
    {
      "include": "#number"
    },
    {
      "include": "#decorator"
    },
    {
      "include": "#placeholder"
    },
    {
      "include": "#field"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#boolean"
    },
    {
      "include": "#constructor"
    },
    {
      "include": "#type"
    },
    {
      "include": "#pipe"
    },
    {
      "include": "#arrow"
    },
    {
      "include": "#cmp"
    },
    {
      "include": "#question"
    },
    {
      "include": "#bracket"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operator"
    }
  ],
  "repository": {
    "arrow": {
      "patterns": [
        {
          "match": "(=>|<-|->)",
          "name": "keyword.operator.arrow.aivi"
        }
      ]
    },
    "balanced_braces": {
      "begin": "\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "patterns": [
        {
          "include": "#sigil_inner"
        }
      ]
    },
    "balanced_brackets": {
      "begin": "\\[",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "end": "\\]",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "patterns": [
        {
          "include": "#sigil_inner"
        }
      ]
    },
    "balanced_parens": {
      "begin": "\\(",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.bracket.aivi"
        }
      },
      "patterns": [
        {
          "include": "#sigil_inner"
        }
      ]
    },
    "boolean": {
      "patterns": [
        {
          "match": "\\b(True|False)\\b",
          "name": "constant.language.boolean.aivi"
        }
      ]
    },
    "bracket": {
      "patterns": [
        {
          "match": "[\\[\\]\\(\\)\\{\\}]",
          "name": "punctuation.section.bracket.aivi"
        }
      ]
    },
    "cmp": {
      "patterns": [
        {
          "match": "(==|!=|<=|>=|=|<|>)",
          "name": "keyword.operator.comparison.aivi"
        }
      ]
    },
    "color": {
      "patterns": [
        {
          "match": "#[0-9a-fA-F]{6}\\b",
          "name": "constant.other.color.aivi"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash.aivi"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.aivi"
        }
      ]
    },
    "constructor": {
      "patterns": [
        {
          "match": "\\b(None|Some|Ok|Err)\\b",
          "name": "support.constant.aivi"
        }
      ]
    },
    "decorator": {
      "patterns": [
        {
          "match": "@[a-z][A-Za-z0-9_]*\\b",
          "name": "meta.annotation.decorator.aivi"
        }
      ]
    },
    "field": {
      "patterns": [
        {
          "match": "\\b[a-z][A-Za-z0-9_]*\\b(?=\\s*:)",
          "name": "variable.other.property.aivi"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "match": "\\b(do|effect|generate|resource|if|then|else|when|unless|yield|loop|recurse|or|match|given|mock|in)\\b",
          "name": "keyword.control.aivi"
        },
        {
          "match": "\\b(module|export|use|as|hiding|domain|class|instance|over|patch|with|machine|on|snapshot)\\b",
          "name": "keyword.other.aivi"
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "match": "\\b\\d+(?:\\.\\d+)?\\b",
          "name": "constant.numeric.aivi"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "match": "(\\.\\.\\.|!=|&&|\\+\\+|->|\\.\\.|::|:=|<-|<<|<=|<\\||==|=>|>=|>>|\\?\\?|\\|>|\\|\\||!|%|\\*|\\+|,|-|\\.|/|:|<|=|>|\\?|\\^|\\||~)",
          "name": "keyword.operator.aivi"
        }
      ]
    },
    "pipe": {
      "patterns": [
        {
          "match": "(<\\||\\|>|\\|(?!\\|))",
          "name": "keyword.operator.pipe.aivi"
        }
      ]
    },
    "placeholder": {
      "patterns": [
        {
          "match": "\\b_\\b",
          "name": "variable.language.placeholder.aivi"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "match": ":",
          "name": "punctuation.separator.key-value.aivi"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.aivi"
        }
      ]
    },
    "question": {
      "patterns": [
        {
          "match": "\\?(?!\\?)",
          "name": "keyword.operator.match.aivi"
        }
      ]
    },
    "sigil": {
      "patterns": [
        {
          "begin": "(~<html>)",
          "beginCaptures": {
            "1": {
              "name": "storage.type.sigil.aivi"
            }
          },
          "end": "(</html>)",
          "endCaptures": {
            "1": {
              "name": "storage.type.sigil.aivi"
            }
          },
          "name": "string.quoted.other.sigil.html.aivi",
          "patterns": [
            {
              "include": "#sigil_splice"
            },
            {
              "include": "#xml_tags"
            }
          ]
        },
        {
          "begin": "(~<gtk>)",
          "beginCaptures": {
            "1": {
              "name": "storage.type.sigil.aivi"
            }
          },
          "end": "(</gtk>)",
          "endCaptures": {
            "1": {
              "name": "storage.type.sigil.aivi"
            }
          },
          "name": "string.quoted.other.sigil.gtk.aivi",
          "patterns": [
            {
              "include": "#sigil_splice"
            },
            {
              "include": "#xml_tags"
            }
          ]
        },
        {
          "begin": "(~map)(\\{)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "name": "meta.sigil.structured.aivi",
          "patterns": [
            {
              "include": "#sigil_inner"
            }
          ]
        },
        {
          "begin": "(~set)(\\[)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "end": "(\\])",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "name": "meta.sigil.structured.aivi",
          "patterns": [
            {
              "include": "#sigil_inner"
            }
          ]
        },
        {
          "begin": "(~mat)(\\[)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "end": "(\\])",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.bracket.aivi"
            }
          },
          "name": "meta.sigil.structured.aivi",
          "patterns": [
            {
              "include": "#sigil_inner"
            }
          ]
        },
        {
          "begin": "(~(?!map\\b|set\\b|mat\\b)[a-z][A-Za-z0-9_]*)(/)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)/(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~(?!map\\b|set\\b|mat\\b)[a-z][A-Za-z0-9_]*)(\\\")",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\\"(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~(?!map\\b|set\\b|mat\\b)[a-z][A-Za-z0-9_]*)(\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\)(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~(?!map\\b|set\\b|mat\\b)[a-z][A-Za-z0-9_]*)(\\[)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\](?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~(?!map\\b|set\\b|mat\\b)[a-z][A-Za-z0-9_]*)(\\{)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\}(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "sigil_inner": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#type_signature"
        },
        {
          "include": "#sigil"
        },
        {
          "include": "#string"
        },
        {
          "include": "#color"
        },
        {
          "include": "#unit"
        },
        {
          "include": "#number"
        },
        {
          "include": "#decorator"
        },
        {
          "include": "#placeholder"
        },
        {
          "include": "#field"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#boolean"
        },
        {
          "include": "#constructor"
        },
        {
          "include": "#type"
        },
        {
          "include": "#pipe"
        },
        {
          "include": "#arrow"
        },
        {
          "include": "#cmp"
        },
        {
          "include": "#question"
        },
        {
          "include": "#balanced_braces"
        },
        {
          "include": "#balanced_brackets"
        },
        {
          "include": "#balanced_parens"
        },
        {
          "include": "#punctuation"
        },
        {
          "include": "#operator"
        }
      ]
    },
    "sigil_splice": {
      "begin": "\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.interpolation.begin.aivi"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.interpolation.end.aivi"
        }
      },
      "name": "meta.interpolation.aivi",
      "patterns": [
        {
          "include": "#sigil_inner"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.aivi",
          "patterns": [
            {
              "match": "\\\\([\\\\\\\"nrt]|u\\{[0-9a-fA-F]+\\})",
              "name": "constant.character.escape.aivi"
            },
            {
              "begin": "\\{",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.begin.aivi"
                }
              },
              "end": "\\}",
              "endCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.end.aivi"
                }
              },
              "name": "meta.interpolation.aivi",
              "patterns": [
                {
                  "include": "#comment"
                },
                {
                  "include": "#sigil"
                },
                {
                  "include": "#string"
                },
                {
                  "include": "#color"
                },
                {
                  "include": "#unit"
                },
                {
                  "include": "#number"
                },
                {
                  "include": "#decorator"
                },
                {
                  "include": "#placeholder"
                },
                {
                  "include": "#field"
                },
                {
                  "include": "#keyword"
                },
                {
                  "include": "#boolean"
                },
                {
                  "include": "#constructor"
                },
                {
                  "include": "#type"
                },
                {
                  "include": "#pipe"
                },
                {
                  "include": "#arrow"
                },
                {
                  "include": "#cmp"
                },
                {
                  "include": "#question"
                },
                {
                  "include": "#bracket"
                },
                {
                  "include": "#punctuation"
                },
                {
                  "include": "#operator"
                }
              ]
            }
          ]
        },
        {
          "begin": "`",
          "end": "`",
          "name": "string.quoted.other.backtick.aivi"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b",
          "name": "entity.name.type.aivi"
        }
      ]
    },
    "type_signature": {
      "patterns": [
        {
          "match": "^\\s*[a-z][A-Za-z0-9_]*\\s+:.*$",
          "name": "meta.type.signature.aivi"
        }
      ]
    },
    "unit": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "constant.numeric.aivi"
            },
            "2": {
              "name": "constant.other.unit.aivi"
            }
          },
          "match": "\\b(\\d+(?:\\.\\d+)?)([a-z][A-Za-z0-9_]*)\\b",
          "name": "meta.number.unit.aivi"
        }
      ]
    },
    "xml_tags": {
      "patterns": [
        {
          "match": "</([a-zA-Z][a-zA-Z0-9._]*)>",
          "name": "entity.name.tag.aivi"
        },
        {
          "match": "<([a-zA-Z][a-zA-Z0-9._]*)(?=[\\s/>])",
          "name": "entity.name.tag.aivi"
        },
        {
          "match": "/>|>",
          "name": "punctuation.definition.tag.aivi"
        },
        {
          "match": "\\b([a-zA-Z][a-zA-Z0-9_]*)(?==)",
          "name": "entity.other.attribute-name.aivi"
        },
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.xml.aivi",
          "patterns": [
            {
              "include": "#sigil_splice"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.aivi"
}
