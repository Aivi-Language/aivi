{
  "name": "aivi-vscode",
  "displayName": "AIVI Language Support",
  "description": "Syntax highlighting and formatting for the AIVI language (from the AIVI specs).",
  "version": "0.1.119",
  "publisher": "aivi",
  "packageManager": "pnpm@9.15.4",
  "repository": {
    "type": "git",
    "url": "https://example.invalid/aivi"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "icon": "assets/aivi-64.png",
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "dist/extension.js.map",
    "syntaxes/**",
    "themes/**",
    "language-configuration.json",
    "ebnf-language-configuration.json",
    "assets/**",
    "bin/**",
    "LICENSE",
    "README.md"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aivi.restartServer",
        "title": "AIVI: Restart Language Server"
      },
      {
        "command": "aivi.runTests",
        "title": "AIVI: Run Tests"
      },
      {
        "command": "aivi.runTestsFile",
        "title": "AIVI: Run Tests (Current File)"
      },
      {
        "command": "aivi.runTestsFolder",
        "title": "AIVI: Run Tests (Folder)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "aivi.runTestsFile",
          "when": "resourceLangId == aivi",
          "group": "navigation@5"
        }
      ]
    },
    "languages": [
      {
        "id": "aivi",
        "aliases": [
          "AIVI",
          "aivi"
        ],
        "extensions": [
          ".aivi"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ebnf",
        "aliases": [
          "EBNF",
          "ebnf"
        ],
        "extensions": [
          ".ebnf"
        ],
        "configuration": "./ebnf-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aivi",
        "scopeName": "source.aivi",
        "path": "./syntaxes/aivi.tmLanguage.json"
      },
      {
        "language": "ebnf",
        "scopeName": "source.ebnf",
        "path": "./syntaxes/ebnf.tmLanguage.json"
      },
      {
        "scopeName": "text.html.aivi.injection",
        "path": "./syntaxes/aivi.html.injection.tmLanguage.json",
        "injectTo": [
          "source.aivi"
        ],
        "embeddedLanguages": {
          "text.html.basic": "html",
          "source.aivi": "aivi"
        }
      }
    ],
    "themes": [
      {
        "label": "AIVI Dark Modern",
        "uiTheme": "vs-dark",
        "path": "./themes/aivi-dark-modern-color-theme.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "aiviArrow",
        "superType": "operator",
        "description": "Arrow operators (=>, <-, ->)"
      },
      {
        "id": "aiviPipe",
        "superType": "operator",
        "description": "Pipe operators (|>, <|, |)"
      },
      {
        "id": "aiviBracket",
        "superType": "operator",
        "description": "Brackets and parentheses"
      },
      {
        "id": "aiviDot",
        "superType": "operator",
        "description": "Dot separator in dotted paths"
      },
      {
        "id": "aiviUnit",
        "superType": "keyword",
        "description": "Domain unit suffixes"
      },
      {
        "id": "aiviSigil",
        "superType": "string",
        "description": "Sigil prefix markers"
      },
      {
        "id": "aiviPathHead",
        "superType": "variable",
        "description": "First segment of a dotted path"
      },
      {
        "id": "aiviPathMid",
        "superType": "variable",
        "description": "Middle segment of a dotted path"
      },
      {
        "id": "aiviPathTail",
        "superType": "variable",
        "description": "Last segment of a dotted path"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "aivi",
        "scopes": {
          "aiviArrow": [
            "keyword.operator.arrow.aivi"
          ],
          "aiviPipe": [
            "keyword.operator.pipe.aivi"
          ],
          "aiviBracket": [
            "punctuation.section.bracket.aivi"
          ],
          "aiviDot": [
            "punctuation.accessor.aivi"
          ],
          "aiviUnit": [
            "constant.other.unit.aivi"
          ],
          "aiviSigil": [
            "storage.type.sigil.aivi"
          ],
          "aiviPathHead": [
            "variable.other.readwrite.aivi"
          ],
          "aiviPathMid": [
            "variable.other.readwrite.aivi"
          ],
          "aiviPathTail": [
            "variable.other.property.aivi"
          ]
        }
      }
    ],
    "configuration": {
      "title": "AIVI",
      "properties": {
        "aivi.server.command": {
          "type": "string",
          "default": "",
          "description": "Override the language server command. If unset, the extension prefers the bundled `aivi-lsp`, then `aivi-lsp` on PATH, then `aivi lsp`."
        },
        "aivi.server.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra arguments for `aivi.server.command`."
        },
        "aivi.format.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "Indentation size used by the built-in AIVI formatter."
        },
        "aivi.format.maxBlankLines": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 5,
          "description": "Maximum number of consecutive blank lines produced by the formatter."
        },
        "aivi.cli.command": {
          "type": "string",
          "default": "aivi",
          "description": "Command used to invoke the AIVI CLI (used for running tests)."
        }
      }
    },
    "configurationDefaults": {
      "[aivi]": {
        "editor.defaultFormatter": "aivi.aivi-vscode"
      }
    }
  },
  "scripts": {
    "compile": "node scripts/bundle.js",
    "build": "node scripts/build.js",
    "test:unit": "vitest run",
    "test:integration": "node src/test/integration/run-tests.js",
    "test:all": "pnpm run test:unit && pnpm run test:integration",
    "test": "pnpm run test:unit",
    "watch": "node scripts/bundle.js --watch",
    "package": "pnpm install --node-linker=hoisted --public-hoist-pattern=* && vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "25.2.2",
    "@types/vscode": "1.107.0",
    "@typescript/native-preview": "latest",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.1",
    "esbuild": "0.25.0",
    "jsdom": "^28.0.0",
    "vscode-oniguruma": "file:third_party/vscode-oniguruma",
    "vscode-textmate": "file:third_party/vscode-textmate",
    "vitest": "^4.0.18"
  }
}
