@no_prelude
module integrationTests.syntax.resources.basicResourceBlock

export managedFile

use aivi
use aivi.testing

managedFile : Text -> Resource Text FileHandle
managedFile = path => resource {
  handle <- file.open path
  yield handle
  file.close handle
}

@test "resource block error handling"
resourceOpenFailureIsCaught = do Effect {
  assertEq (1 + 1) 2
}
