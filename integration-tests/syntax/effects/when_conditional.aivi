@no_prelude
module integrationTests.syntax.effects.whenConditional

use aivi
use aivi.testing

@test "when true runs"
whenTrueRuns = do Effect {
  x = True
  when x <- print "yes"
  pure Unit
}

@test "when false skips"
whenFalseSkips = do Effect {
  x = False
  when x <- print "never"
  pure Unit
}
