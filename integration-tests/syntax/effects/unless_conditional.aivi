@no_prelude
module integrationTests.syntax.effects.unlessConditional

use aivi
use aivi.testing

@test "unless skips when true"
unlessSkipsWhenTrue = do Effect {
  unless True <- print "should not run"
  pure Unit
}

@test "unless false runs"
unlessFalseRuns = do Effect {
  unless False <- print "runs"
  pure Unit
}

@test "when and unless symmetric"
whenAndUnlessSymmetric = do Effect {
  when False  <- pure Unit
  unless True <- pure Unit
  pure Unit
}
