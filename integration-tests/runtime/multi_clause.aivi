@no_prelude
module integrationTests.runtime.multiClause

use aivi
use aivi.testing

Bool2 = True2 | False2

// Multi-clause function (requires type signature)
not2 : Bool2 -> Bool2
not2 =
  | True2  => False2
  | False2 => True2

// Multi-clause with more arms
toInt : Bool2 -> Int
toInt =
  | True2  => 1
  | False2 => 0

@test "multi-clause not"
multiClauseNot = do Effect {
  assertEq (not2 True2) False2
  assertEq (not2 False2) True2
}

@test "multi-clause toInt"
multiClauseToInt = do Effect {
  assertEq (toInt True2) 1
  assertEq (toInt False2) 0
}
