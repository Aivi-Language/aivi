@no_prelude
module integrationTests.stdlib.aivi.calendar.addDays

use aivi
use aivi.testing (assert)

use aivi.calendar

subject = addDays

@test
smoke = effect {
  d = addDays 1 { year: 2024, month: 2, day: 28 }
  _ <- assert (d.day == 29)
  _ <- assert (d.month == 2)
  
  d2 = addDays 2 { year: 2024, month: 2, day: 28 }
  _ <- assert (d2.day == 1)
  _ <- assert (d2.month == 3)
}
