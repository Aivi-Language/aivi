@no_prelude
module integrationTests.stdlib.aivi.duration.domain_Duration.tests

use aivi
use aivi.testing
use aivi.duration
use aivi.duration (domain Duration)

@test
suffix_h_smoke = effect {
  subject = 1h
  base = { millis: 0 }
  res = base + subject
  _ <- assertEq res.millis 3600000
}

@test
suffix_min_smoke = effect {
  subject = 1min
  base = { millis: 0 }
  res = base + subject
  _ <- assertEq res.millis 60000
}

@test
suffix_ms_smoke = effect {
  subject = 1ms
  base = { millis: 0 }
  res = base + subject
  _ <- assertEq res.millis 1
}

@test
suffix_s_smoke = effect {
  subject = 1s
  base = { millis: 0 }
  res = base + subject
  _ <- assertEq res.millis 1000
}
