@no_prelude
module integrationTests.stdlib.aivi.system.tests

use aivi
use aivi.testing
use aivi.system

@test
args_smoke = do Effect {
  a <- args
  // args returns a list of text, may be empty in test context
  assert True
}

@test
localeTag_smoke = do Effect {
  tag <- localeTag
  // localeTag returns Option Text, may be None in some environments
  assert True
}

@test
env_record_shape = do Effect {
  // Verify env record has expected fields
  val <- env.get "PATH"
  // PATH should exist on most systems
  val match
    | Some _ => assert True
    | None   => assert True  // acceptable in sandboxed environments
}
