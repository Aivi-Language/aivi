@no_prelude
module integrationTests.stdlib.aivi.vector.normalize

use aivi
use aivi.testing

use aivi.vector

subject = normalize

@test
smoke = effect {
  v = { x: 3.0, y: 4.0 }
  n = normalize v
  _ <- testing.assert (abs (n.x - 0.6) < 0.0001)
  _ <- testing.assert (abs (n.y - 0.8) < 0.0001)
  _ <- testing.assert (abs (magnitude n - 1.0) < 0.0001)
}
