@no_prelude
module integrationTests.stdlib.aivi.vector.normalize

use aivi
use aivi.testing
use aivi.vector
use aivi.math

@test
smoke = effect {
  v = { x: 3.0, y: 4.0 }
  n = normalize v
  _ <- assert (abs (n.x - 0.6) < 0.0001)
  _ <- assert (abs (n.y - 0.8) < 0.0001)
  _ <- assert (abs (magnitude n - 1.0) < 0.0001)
}
