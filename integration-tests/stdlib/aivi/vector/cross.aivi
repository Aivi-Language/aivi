@no_prelude
module integrationTests.stdlib.aivi.vector.cross

use aivi
use aivi.testing (assert)

use aivi.vector

subject = cross

@test
smoke = effect {
  v1 = { x: 1.0, y: 0.0, z: 0.0 }
  v2 = { x: 0.0, y: 1.0, z: 0.0 }
  c = cross v1 v2
  _ <- assert (abs c.x < 0.0001)
  _ <- assert (abs c.y < 0.0001)
  _ <- assert (abs (c.z - 1.0) < 0.0001)
}
