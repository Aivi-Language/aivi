@no_prelude
module integrationTests.stdlib.aivi.math.tests

use aivi
use aivi.testing
use aivi.math

angle_touch : Angle -> Unit
angle_touch = _ => Unit

@test
angle_smoke = effect {
  _ <- pure angle_touch
  _ <- assertEq (1 + 1) 2
}

bigInt_touch : BigInt -> Unit
bigInt_touch = _ => Unit

@test
bigInt_smoke = effect {
  _ <- pure bigInt_touch
  _ <- assertEq (1 + 1) 2
}

