@no_prelude
module integrationTests.stdlib.aivi.ui.layout.tests

use aivi
use aivi.testing
use aivi.ui.layout

@test "length types"
length_types = do Effect {
  px = Px 100
  em = Em 2
  rem = Rem 1
  vh = Vh 50
  vw = Vw 100
  assertEq px (Px 100)
  assertEq em (Em 2)
  assertEq rem (Rem 1)
  assertEq vh (Vh 50)
  assertEq vw (Vw 100)
}

@test "percentage type"
percentage_type = do Effect {
  p = Pct 50
  assertEq p (Pct 50)
}

@test "unit val construct"
unitVal_construct = do Effect {
  u = { val: 42 }
  assertEq u.val 42
}
