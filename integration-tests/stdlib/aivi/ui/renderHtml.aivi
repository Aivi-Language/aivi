@no_prelude
module integrationTests.stdlib.aivi.ui.renderHtml

use aivi
use aivi.testing (assert)

use aivi.ui

subject = renderHtml

@test
smoke = effect {
  node = vElement "p" [] [vText "hi"]
  html = renderHtml node
  _ <- assert (html == "<p data-aivi-node=\"root\"><span data-aivi-node=\"root/0\">hi</span></p>")
}
