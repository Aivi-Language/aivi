@no_prelude
module integrationTests.stdlib.aivi.ui.vStyle

use aivi
use aivi.testing (assert)

use aivi.ui

subject = vStyle

@test
smoke = effect {
  style = vStyle { color: "red" }
  node = vElement "div" [style] []
  _ <- assert (renderHtml node == "<div data-aivi-node=\"root\" style=\"color: red\"></div>")
}
