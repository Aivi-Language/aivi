@no_prelude
module integrationTests.stdlib.aivi.i18n.render

use aivi
use aivi.testing (assert)

use aivi.i18n

subject = render

@test
smoke = effect {
  m_res = message "Hello, {name}!"
  m <- match m_res with Ok m => pure m Err e => fail e
  r_res = render m { name: "Antigravity" }
  r <- match r_res with Ok r => pure r Err e => fail e
  _ <- assert (r == "Hello, Antigravity!")
}
