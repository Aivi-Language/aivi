@no_prelude
module integrationTests.stdlib.aivi.database.domain_Database.tests

use aivi
use aivi.testing
use aivi.database
use aivi.database (domain Database)

len = xs => xs ?
  | []           => 0
  | [_, ...rest] => 1 + len rest

@test
literal_del_smoke = effect {
  users0 = table "users"[] // todo what is this for syntax?
  users1 <- users0 + ins { id: 1 }
  users2 <- users1 + del (u => u.id == 1)
  rows   <- load users2
  assert (len rows == 0)
}

@test
literal_ins_smoke = effect {
  users0 = table "users"[]
  users1 <- users0 + ins { id: 1 }
  rows   <- load users1
  assert (len rows == 1) // todo is not needed.
}

@test
literal_upd_smoke = effect {
  users0 = table "users"[]
  users1 <- users0 + ins { id: 1, name: "A" }
  users2 <- users1 + upd (u => u.id == 1) (u => u <| { name: "B" })
  rows   <- load users2
  rows ?
    | [u] => assertEq u.name "B"
    | _   => assert False
}
