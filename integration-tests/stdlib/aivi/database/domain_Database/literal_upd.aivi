@no_prelude
module integrationTests.stdlib.aivi.database.domain_Database.literal_upd

use aivi
use aivi.testing
use aivi.database
use aivi.database (domain Database)

@test
smoke = effect {
  User = { id: Int, name: Text }
  users0 = table "users"[]
  users1 <- users0 + ins { id: 1, name: "A" }
  users2 <- users1 + upd (u => u.id == 1) (u => u <| { name: "B" })
  rows   <- load users2
  _      <- rows ?
    | [u] => assertEq u.name "B"
    | _   => assert False
}
