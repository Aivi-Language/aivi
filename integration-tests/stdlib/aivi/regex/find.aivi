@no_prelude
module integrationTests.stdlib.aivi.regex.find

use aivi
use aivi.testing (assert)

use aivi.regex

subject = find

@test
smoke = effect {
  reResult = compile "e"
  r <- reResult ?
    | Ok re => effect.pure re
    | Err _ => effect.fail "compile failed"
  
  fResult = regex.find r "hello"
  _ <- fResult ?
    | Some (s, e) => effect {
        _ <- assert (s == 1)
        _ <- assert (e == 2)
      }
    | None => assert False
}
