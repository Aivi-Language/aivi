@no_prelude
module integrationTests.stdlib.aivi.regex.match

use aivi
use aivi.testing (assert)

use aivi.regex

subject = match

@test
smoke = effect {
  r <- match compile "h(e)llo" {
    | Ok re => pure re
    | Err _ => fail "compile failed"
  }
  m = match r "hello"
  _ <- match m {
    | Some res => effect {
        _ <- assert (res.full == "hello")
        _ <- assert (res.groups == [Some "e"])
        _ <- assert (res.start == 0)
        _ <- assert (res.end == 5)
      }
    | None => assert False
  }
}
