@no_prelude
module integrationTests.stdlib.aivi.units.Quantity

use aivi
use aivi.testing
use aivi.units
use aivi.math

@test
smoke = effect {
  m = defineUnit "m" 1.0
  a = { value: 2.0, unit: m }
  b = { value: 3.0, unit: m }
  sum = Units.(+) a b
  scaled = Units.(*) a 4.0
  _ <- assert (abs (sum.value - 5.0) < 0.0000001)
  _ <- assert (abs (scaled.value - 8.0) < 0.0000001)
}
