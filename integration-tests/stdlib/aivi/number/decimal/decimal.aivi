@no_prelude
module integrationTests.stdlib.aivi.number.decimal.tests

use aivi
use aivi.testing
use aivi.number.decimal

@test
fromFloat_smoke = effect {
  d = fromFloat 1.23
  assert (toFloat d == 1.23)
}

.14dec

@test
n_1dec_smoke = effect {
  d = 1.0dec
  assert (toFloat d == 1.0)
}

@test
round_smoke = effect {
  d = fromFloat 1.235
  r = round 2 d
  assert (toFloat r == 1.24)
}

@test
toFloat_smoke = effect {
  d = fromFloat 123.456
  assert (toFloat d == 123.456)
}
