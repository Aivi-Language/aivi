@no_prelude
module integrationTests.stdlib.aivi.geometry.tests

use aivi
use aivi.testing
use aivi.geometry

line2_touch : Line2 -> Unit
line2_touch = _ => Unit

@test
line2_smoke = effect {
  pure line2_touch
  assertEq (1 + 1) 2
}

point2_touch : Point2 -> Unit
point2_touch = _ => Unit

