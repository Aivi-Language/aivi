@test
area_smoke = effect {
  square = { vertices: [{ x: 0.0, y: 0.0 }, { x: 1.0, y: 0.0 }, { x: 1.0, y: 1.0 }, { x: 0.0, y: 1.0 }] }
  squareRev = { vertices: [{ x: 0.0, y: 0.0 }, { x: 0.0, y: 1.0 }, { x: 1.0, y: 1.0 }, { x: 1.0, y: 0.0 }] }
  assertEq (area square) 1.0
  assertEq (area squareRev) 1.0
}

@test
distance_smoke = effect {
  a = { x: 0.0, y: 0.0 }
  b = { x: 3.0, y: 4.0 }
  assertEq (distance a b) 5.0
}

@test
midpoint_smoke = effect {
  seg = { start: { x: 0.0, y: 0.0 }, end: { x: 2.0, y: 2.0 } }
  assertEq (midpoint seg) { x: 1.0, y: 1.0 }
}
