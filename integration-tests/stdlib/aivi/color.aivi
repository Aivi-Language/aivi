@no_prelude
module integrationTests.stdlib.aivi.color

use aivi
use aivi.testing
use aivi.color
use aivi.text

@test
smoke = effect {
  base = { r: 0.2, g: 0.4, b: 0.6 }
  lighter = adjustLightness base 20
  saturated = adjustSaturation base 10
  hueShift = adjustHue base 30
  _ <- assert (toHex lighter != toHex base)
  _ <- assert (toHsl saturated.g > 10.0)
  _ <- assert (toRgb (toHsl hueShift) .r >= 0.0)
  _ <- assert (text.startsWith (toHex base) "#")
}
