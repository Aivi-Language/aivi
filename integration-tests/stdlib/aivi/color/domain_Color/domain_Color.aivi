@no_prelude
module integrationTests.stdlib.aivi.color.domain_Color.tests

use aivi
use aivi.testing
use aivi.color

@test
suffix_h_smoke = effect {
  rgb = { r: 10, g: 20, b: 30 }
  adjusted = adjustHue rgb 1
  assert (toHex adjusted != toHex rgb)
}

@test
suffix_l_smoke = effect {
  rgb = { r: 20, g: 20, b: 20 }
  adjusted = adjustLightness rgb 1
  assert (toHex adjusted != toHex rgb)
}

@test
suffix_s_smoke = effect {
  rgb = { r: 0, g: 50, b: 100 }
  adjusted = adjustSaturation rgb 1
  assert (toHex adjusted != toHex rgb)
}

@test
rgb_channel_literals = effect {
  rgb = { r: 20, g: 128, b: 20 }
  assert (rgb == { r: 20, g: 128, b: 20 })
}
