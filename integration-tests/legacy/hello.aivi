
module examples.hello
export main

use aivi
use aivi.console
use aivi.testing


main : Effect Text Unit
main = effect {
  _ <- print "Hello, world!"
}

__test_sentinel = 0

@test
smoke = effect {
  // Keep simple: validate the effect value exists and is runnable.
  _ <- pure main
  msg = "Hello, world!"
  _ <- assert (length msg == 13)
}
